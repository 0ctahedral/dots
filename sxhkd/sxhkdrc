# Universal rc

# new terminal
super + Return
      emacsclient -e '(oct/term-in-new-frame)'

# backup of normal terminal
super + shift + Return
	xiate

# new emacs window
super + e
      emacsclient -c

# browser
super + shift + w
	vivaldi-stable
# file manager
super + shift + t
	thunar
# dmenu/rofi
super + space
	drun
# display time
super + t
	notify-send -t 3000 "$(date)"
# toggle bar
# volume control
XF86AudioRaiseVolume
	dunstify -r 300 -t 1500 "$(pamixer --get-volume)%"; pamixer -i 1
XF86AudioLowerVolume
	dunstify -r 300 -t 1500 "$(pamixer --get-volume)%"; pamixer -d 1
XF86AudioMute
	dunstify -r 300 -t 1500 "mute toggled"; pamixer -t

XF86MonBrightnessUp
	dunstify -r 300 -t 1500 "$(brightness)%"; brightness -i 50
XF86MonBrightnessDown
	dunstify -r 300 -t 1500 "$(brightness)%"; brightness -d 50
# media playback control
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
# monitor switching commands
#
# screenshot
super + shift + c
	maim -s ~/pic/scrot/$(date +%s)

# reload config
super + ctrl + shift + r
	pkill -USR1 sxhkd; dunstify -t 1000 "reloaded sxhkdrc"

super + shift + q
	killall Xorg
